<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEE9E9"
    android:gravity="center"
    tools:context="com.stressless.stressless.Activity.PrincipalActivity">


    <Button
        android:id="@+id/btnSensor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:background="#ef1137"
        android:text="Cadastrar dados sensores" />

    <Button
        android:id="@+id/btnManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btnSensor"
        android:layout_below="@+id/btnSensor"
        android:layout_marginTop="58dp"
        android:background="#ef1137"
        android:text="Cadastrar dados manuais" />
</RelativeLayout>
